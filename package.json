{
  "name": "wallet",
  "version": "0.0.0",
  "private": true,
  "extension": {
    "name": "Wallet",
    "description": "A cool wallet."
  },
  "scripts": {
    "build": "tsc && vite build",
    "build:ds": "vite build -c src/design-system/vite.config.ts",
    "dev": "vite",
    "format": "rome format . --write",
    "lint": "rome check .",
    "lint:fix": "pnpm lint --apply",
    "prepare": "pnpm build:ds",
    "serve:firefox": "web-ext run --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist/",
    "serve:chrome": "web-ext run -t chromium --start-url \"https://wagmi.sh\" --source-dir ./dist/",
    "symbols": "node -r esbuild-register scripts/generate-symbols.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@capsizecss/core": "^3.1.0",
    "@capsizecss/vanilla-extract": "^1.0.0",
    "@radix-ui/colors": "^0.1.8",
    "@radix-ui/react-polymorphic": "^0.0.14",
    "@samrum/vite-plugin-web-extension": "^4.1.0",
    "@types/chroma-js": "^2.4.0",
    "@types/chrome": "^0.0.227",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.11",
    "@types/opentype.js": "^1.3.4",
    "@types/prettier": "^2.7.2",
    "@types/react": "^18.0.32",
    "@types/react-dom": "^18.0.11",
    "@types/webextension-polyfill": "^0.10.0",
    "@vanilla-extract/css": "^1.11.0",
    "@vanilla-extract/css-utils": "^0.1.3",
    "@vanilla-extract/dynamic": "^2.0.3",
    "@vanilla-extract/sprinkles": "^1.6.0",
    "@vanilla-extract/vite-plugin": "^3.8.0",
    "@vitejs/plugin-react": "^4.0.0-beta.0",
    "bun": "^0.5.9",
    "chroma-js": "^2.4.2",
    "class-variance-authority": "~0.5.2",
    "clsx": "^1.2.1",
    "esbuild": "^0.17.17",
    "esbuild-register": "^3.4.2",
    "eventemitter3": "^5.0.1",
    "fs-extra": "^11.1.1",
    "opentype.js": "^1.3.4",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-flatten-children": "^1.1.2",
    "react-router": "^6.10.0",
    "react-router-dom": "^6.10.0",
    "remeda": "^1.14.0",
    "rome": "^12.0.0",
    "svg-path-commander": "^2.0.5",
    "typescript": "^5.0.2",
    "viem": "~0.3.7",
    "vite": "^4.3.0",
    "vite-plugin-crx-hot-reload": "^1.0.4",
    "web-ext": "^7.6.1",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "tsup": "^6.7.0"
  }
}
